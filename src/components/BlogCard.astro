---
interface Props {
  backgroundColor: string;
  title: string;
  description: string;
  date: string;
}

const { backgroundColor, date, description, title } = Astro.props;
---

<div
  style={{
    backgroundColor,
  }}
  class="border-black border-2 hover:shadow-[8px_8px_0px_rgba(0,0,0,1)]"
>
  <article class="w-full h-full">
    <div class="px-6 py-5 text-left h-full">
      <p class="text-base mb-4">{date}</p>
      <h1 class="text-[32px] mb-4">{title}</h1>
      <p class="text-sm mb-4 line-clamp-3">
        {description}
      </p>
      <strong>Read More</strong>
    </div>
  </article>
</div>
