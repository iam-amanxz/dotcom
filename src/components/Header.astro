---
import NavLink from "./NavLink.astro";
import navLinks from "../data/nav-links.json";
---

<header class="py-5 px-5 md:px-0 border-b-2 border-black sticky top-0 z-50 bg-white md:static">
  <div class="container flex justify-between md:items-center gap-5 flex-col md:flex-row">
    <a href="/" class="font-bold heading text-lg md:text-xl">husnulaman</a>
    <div class="flex gap-5 uppercase text-sm font-semibold items-center">
      {
        Object.entries(navLinks).map(([title, href]) => (
          <NavLink
            href={href}
            title={title}
            isActive={Astro.url.pathname === href}
          />
        ))
      }
    </div>
  </div>
</header>
