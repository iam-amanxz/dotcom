---
import SocialLink from "./social-link.astro";
import socialLinks from "../data/social-links.json";
---

<div class="py-20 border-b-2 border-black">
  <div class="mx-auto container">
    <h1 class="heading font-black text-5xl mb-10 text-center">
      Don't be shy.<br />Let's connect!
    </h1>

    <ul
      class="animate flex flex-wrap justify-center gap-5 md:gap-8 xl:gap-10 mb-7"
    >
      {
        Object.entries(socialLinks).map(([title, href]) => (
          <SocialLink href={href} title={title} />
        ))
      }
    </ul>
  </div>
</div>
