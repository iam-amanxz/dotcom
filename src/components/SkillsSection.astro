---
import skills from "../data/skills.json";
import SkillCard from "./SkillCard.astro";
import Svg1 from "../assets/svg/globe.svg";
import Svg2 from "../assets/svg/mobile.svg";
import Svg3 from "../assets/svg/palette.svg";
---

<div class="py-16 md:py-20 px-5 md:px-0 border-b-2 border-black bg-[var(--surface-3)]">
  <div class="mx-auto container text-center">
    <h1 class="heading font-black text-4xl mb-10 text-[var(--clr-fg-dark)]" data-aos="fade-right">
      Skills
    </h1>

    <div class="grid md:grid-cols-3 gap-5">
      {
        skills.map((skill, index) => (
          <span data-aos="fade-right" data-aos-delay={(index + 1) * 50}>
            <SkillCard
              backgroundColor={skill.backgroundColor}
              title={skill.title}
              description={skill.description}
              skills={skill.skills}
            >
              <img
                src={index === 0 ? Svg1.src : index === 1 ? Svg2.src : Svg3.src}
                alt={skill.title}
              />
            </SkillCard>
          </span>
        ))
      }
    </div>
  </div>
</div>
