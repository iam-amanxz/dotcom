---
import { SOCIALS } from "@/config";
import SocialLink from "./SocialLink.astro";
---

<div
  class="py-16 md:py-20 px-5 md:px-0 border-b-2 border-black bg-[var(--surface-1)]"
>
  <div class="mx-auto container">
    <h1
      class="heading font-black text-4xl mb-10 text-center text-[var(--clr-fg-dark)]"
      data-aos="fade-right"
    >
      Don't be shy.<br />Let's connect!
    </h1>

    <ul
      class="animate flex flex-wrap justify-center gap-5 md:gap-8 xl:gap-10 mb-7"
    >
      {
        SOCIALS.map((item, index) => (
          <span data-aos="fade-right" data-aos-delay={(index + 1) * 10}>
            <SocialLink href={item.href} title={item.name} />
          </span>
        ))
      }
    </ul>
  </div>
</div>
