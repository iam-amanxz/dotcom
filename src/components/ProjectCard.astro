---
interface Props {
  backgroundColor: string;
  description: string;
  title: string;
}

const { backgroundColor, title, description } = Astro.props;
---

<div class="group w-full border-2 border-black" style={{ backgroundColor }}>
  <div
    class="-m-0.5 border-2 border-black"
    style={{ backgroundColor, transform: "none" }}
  >
    <div
      class="relative -m-0.5 flex h-72 flex-col justify-between overflow-hidden border-2 border-black p-8"
      style={{ backgroundColor, transform: "none" }}
    >
      <h1 class="flex items-center text-2xl font-medium uppercase">
        <svg
          stroke="currentColor"
          fill="none"
          stroke-width="2"
          viewBox="0 0 24 24"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="-ml-8 mr-2 opacity-0 transition-all duration-300 ease-in-out group-hover:ml-0 group-hover:opacity-100"
          height="1em"
          width="1em"
          xmlns="http://www.w3.org/2000/svg"
          ><line x1="5" y1="12" x2="19" y2="12"></line><polyline
            points="12 5 19 12 12 19"></polyline></svg
        >{title}
      </h1><div>
        <p
          class="transition-[margin] duration-300 ease-in-out group-hover:mb-10"
        >
          {description}
        </p><button
          class="absolute bottom-2 left-2 right-2 translate-y-full border-2 border-black bg-white px-4 py-2 text-black opacity-0 transition-all duration-300 ease-in-out group-hover:translate-y-0 group-hover:opacity-100"
          >LET'S GO</button
        >
      </div>
    </div>
  </div>
</div>
